@using EInvoice.Service.Helpers
@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    long? organizationId = User.GetOrganizationId();
    bool isOrgAssociated = User.HasClaim("IsOrganizationAssociated", "true");
    var fullName = User.Identity.Name ?? "Guest User";
    var initials = string.Join("", fullName
                                .Split(new[] { ' ', '.' }, StringSplitOptions.RemoveEmptyEntries)
                                .Select(n => n[0]))
                                .ToUpper();

    // Pick first letter for color mapping
    char firstLetter = initials.FirstOrDefault();
    string[] colors = { "#007bff", "#28a745", "#ffc107", "#17a2b8", "#6f42c1", "#fd7e14", "#e83e8c" };
    // Simple hash to pick a color index
    int colorIndex = (firstLetter % colors.Length);
    string avatarColor = colors[colorIndex];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Title Page-->
    <title>@ViewData["Title"] - EInvoice</title>
    <link rel="shortcut icon" type="image/png" href="~/images/einvoice-app-logo/envoice-logo-title.png" />
    <link rel="stylesheet" href="~/flexy-theme/assets/css/styles.min.css" />
    <link rel="stylesheet" href="~/flexy-theme/assets/css/custom-styles.min.css" />
</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <!-- Sidebar Start -->
        <aside class="left-sidebar">
            <!-- Sidebar scroll-->
            <div>
                <div class="brand-logo d-flex align-items-center justify-content-between">
                    <a href="#" class="text-nowrap logo-img">
                        <img src="~/images/einvoice-app-logo/envoice-logo-rectangle.png" alt="envoice-logo" class="envoice-logo-layout" />
                    </a>
                    <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
                        <i class="ti ti-x fs-6"></i>
                    </div>
                </div>
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
                    <ul id="sidebarnav">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {                            
                            if (isOrgAssociated)
                            {
                                <li class="sidebar-item @(currentController == "Organization" ? "active" : "")">
                                    <a class="sidebar-link" asp-controller="Dashboard" asp-action="Index" aria-expanded="false">
                                        <i class="ti ti-dashboard"></i>
                                        <span class="hide-menu">Dashboard</span>
                                    </a>
                                </li>
                                <li class="sidebar-item @(currentController == "Organization" ? "active" : "")">
                                    <a class="sidebar-link" asp-controller="Organization" asp-action="Details" aria-expanded="false">
                                        <!-- ti-company (building + briefcase) -->
                                        <svg width="24" height="24" viewBox="0 0 24 24" role="img" aria-label="company icon"
                                             fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                                            <!-- Building -->
                                            <rect x="3" y="4" width="10" height="16" rx="1.5" />
                                            <path d="M6 8h4M6 12h4M6 16h4" />
                                            <!-- Briefcase in front/right -->
                                            <rect x="13" y="10.5" width="8" height="6.5" rx="1.2" />
                                            <path d="M15.2 10.5v-1a2 2 0 0 1 2-2h0.6a2 2 0 0 1 2 2v1" />
                                            <!-- Latch line -->
                                            <path d="M13 13.5h8" />
                                            <!-- Small latches -->
                                            <path d="M16.2 13.5v1M17.8 13.5v1" />
                                        </svg>

                                        <span class="hide-menu">Organization</span>
                                    </a>
                                </li>
                                <li class="sidebar-item @(currentController == "Client" ? "active" : "")">
                                    <a class="sidebar-link" asp-controller="Client" asp-action="Index" aria-expanded="false">
                                        <i class="ti ti-users"></i>
                                        <span class="hide-menu">Clients</span>
                                    </a>
                                </li>

                                <!-- Bootstrap Dropdown for Products -->
                                <li class="sidebar-item @(currentController == "Product" ? "active" : "")">
                                    <a class="sidebar-link" asp-controller="Product" asp-action="Index" aria-expanded="false">
                                        <i class="ti ti-package"></i>
                                        <span class="hide-menu">Products</span>
                                    </a>
                                </li>
                                <!-- End Dropdown -->

                                <li class="sidebar-item @(currentController == "Invoice" ? "active" : "")">
                                    <a class="sidebar-link" asp-controller="Invoice" asp-action="Index" aria-expanded="false">
                                        <i class="ti ti-clipboard"></i>
                                        <span class="hide-menu">Invoices</span>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="sidebar-item @(currentController == "Organization" ? "active" : "")">
                                    <a class="sidebar-link" asp-controller="Organization" asp-action="Upsert" aria-expanded="false">
                                        <!-- ti-company (building + briefcase) -->
                                        <svg width="24" height="24" viewBox="0 0 24 24" role="img" aria-label="company icon"
                                             fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                                            <!-- Building -->
                                            <rect x="3" y="4" width="10" height="16" rx="1.5" />
                                            <path d="M6 8h4M6 12h4M6 16h4" />
                                            <!-- Briefcase in front/right -->
                                            <rect x="13" y="10.5" width="8" height="6.5" rx="1.2" />
                                            <path d="M15.2 10.5v-1a2 2 0 0 1 2-2h0.6a2 2 0 0 1 2 2v1" />
                                            <!-- Latch line -->
                                            <path d="M13 13.5h8" />
                                            <!-- Small latches -->
                                            <path d="M16.2 13.5v1M17.8 13.5v1" />
                                        </svg>

                                        <span class="hide-menu">Organization</span>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <!--  Sidebar End -->
        <!--  Main wrapper -->
        <div class="body-wrapper">
            <!--  Header Start -->
            <header class="app-header">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <ul class="navbar-nav">
                        <li class="nav-item d-block d-xl-none">
                            <a class="nav-link sidebartoggler " id="headerCollapse" href="javascript:void(0)">
                                <i class="ti ti-menu-2"></i>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link " href="javascript:void(0)" id="drop1" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="ti ti-bell"></i>
                                <div class="notification bg-primary rounded-circle"></div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-animate-up" aria-labelledby="drop1">
                                <div class="message-body">
                                    <a href="javascript:void(0)" class="dropdown-item">
                                        Item 1
                                    </a>
                                    <a href="javascript:void(0)" class="dropdown-item">
                                        Item 2
                                    </a>
                                </div>
                            </div>
                        </li>
                    </ul>
                    <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
                        <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end">
                            <li class="nav-item dropdown">
                                <a class="nav-link " href="javascript:void(0)" id="drop2" data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    @* <div class="user-avatar" title="@fullName"> *@
                                    @*     <span>@initials</span> *@
                                    @* </div> *@
                                    <div class="user-avatar" style="background-color:@avatarColor;" title="@fullName">
                                        @initials
                                    </div>
                                    @* <img src="~/flexy-theme/assets/images/profile/user-1.jpg" alt="" width="35" height="35" class="rounded-circle"> *@
                                </a>
                                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop2">
                                    <div class="message-body">
                                        <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-user fs-6"></i>
                                            <p class="mb-0 fs-3">My Profile</p>
                                        </a>
                                        <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-mail fs-6"></i>
                                            <p class="mb-0 fs-3">My Account</p>
                                        </a>
                                        <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-list-check fs-6"></i>
                                            <p class="mb-0 fs-3">My Task</p>
                                        </a>
                                        @if (User?.Identity?.IsAuthenticated ?? false)
                                        {
                                            <a asp-controller="Users" asp-action="Logout" class="btn btn-outline-primary mx-3 mt-2 d-block">Logout</a>
                                        }
                                        else
                                        {
                                            <a asp-controller="Users" asp-action="Login" class="btn btn-outline-primary mx-3 mt-2 d-block">Login</a>
                                            <a asp-controller="Users" asp-action="Register" class="btn btn-outline-primary mx-3 mt-2 d-block">Register</a>
                                        }
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
            <!--  Header End -->
            <div class="body-wrapper-inner">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer>
        <div class="py-6 px-6 text-center">
            <p class="mb-0 fs-4">Design and Developed by <a href="https://connectsystems.pk/" target="_blank" class="pe-1 text-primary text-decoration-underline">Connect Systems pvt. ltd.</a></p>
        </div>
    </footer>
    <script src="~/flexy-theme/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/flexy-theme/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/flexy-theme/assets/js/sidebarmenu.js"></script>
    <script src="~/flexy-theme/assets/js/app.min.js"></script>
    <script src="~/flexy-theme/assets/libs/apexcharts/dist/apexcharts.min.js"></script>
    <script src="~/flexy-theme/assets/libs/simplebar/dist/simplebar.js"></script>
    <script src="~/flexy-theme/assets/js/dashboard.js"></script>
    <!-- solar icons -->
    @* <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script> *@

    <!-- SweetAlert2 -->
    <script src="~/lib/sweet-alert/sweetalert.js"></script>
    <!-- Toastr -->
    <script src="~/lib/toastr/toastr.js"></script>
    <!-- App-specific JS -->
    <script src="~/js/app.config.js"></script>
    <script src="~/js/app.ajax.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Validation Scripts -->
    <partial name="_ValidationScriptsPartial" />

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
<!-- end document-->
