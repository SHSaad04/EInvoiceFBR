@using EInvoice.Common.Entities
@model IEnumerable<InvoiceDTO>

@{
    ViewData["Title"] = "Invoices";
}

<div class="container mt-4">
    <h2>Products</h2>
    <p>
        <a asp-controller="Invoice" asp-action="Add" class="btn btn-primary">Add New Invoice</a>
    </p>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Number</th>
                <th>InvoiceType</th>
                <th>InvoiceDate</th>
                <th>InvoiceRefNo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var invoice in Model)
                {
                    <tr>
                        <td>#</td>
                        <td>@invoice.InvoiceType</td>
                        <td>@invoice.InvoiceDate</td>
                        <td>@invoice.InvoiceRefNo</td>
                        <td>
                            <a asp-controller="Invoice" asp-action="Details" asp-route-id="@invoice.Id" class="btn btn-info btn-sm">Details</a>
                            <a asp-controller="Invoice" asp-action="Edit" asp-route-id="@invoice.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-controller="Invoice" asp-action="Delete" asp-route-id="@invoice.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">No invoices found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
