@using EInvoice.Common.ViewModel
@model InvoiceViewModel

@{
    ViewData["Title"] = "Add Invoice";
}

<h2>Add Invoice</h2>

<form asp-action="Add" method="post">
    <div class="d-flex justify-content-between">
        <div class="form-group col-4">
            <label asp-for="InvoiceNumber"></label>
            <input asp-for="InvoiceNumber" class="form-control" />
            <span asp-validation-for="InvoiceNumber" class="text-danger"></span>
        </div>

        <div class="form-group col-4">
            <label asp-for="InvoiceDate"></label>
            <input asp-for="InvoiceDate" type="date" class="form-control" />
            <span asp-validation-for="InvoiceDate" class="text-danger"></span>
        </div>

        <div class="form-group col-4">
            <label asp-for="ClientId">Buyer</label>
            <select asp-for="ClientId"
                    asp-items="@(new SelectList(Model.Clients, "Id", "BusinessName"))"
                    class="form-control">
                <option value="">-- Select Buyer --</option>
            </select>
            <span asp-validation-for="ClientId" class="text-danger"></span>
        </div>
    </div>

    <h4>Invoice Items</h4>
    <table class="table" id="invoiceItemsTable">
        <thead>
            <tr>
                <th>Product</th>
                <th>Description</th>
                <th>HS Code</th>
                <th>UoM</th>
                <th>Rate</th>
                <th>Qty</th>
                <th>Total</th>
                <th>Tax Rate</th>
                <th>Sales Tax</th>
                <th>Discount</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr data-index="0">
                <td>
                    <select name="InvoiceItems[0].ProductId"
                            class="form-control product-select"
                            asp-items="@(new SelectList(Model.Products, "Id", "Name"))">
                        <option value="">-- Select Product --</option>
                    </select>
                </td>
                <td><input type="text" class="form-control description" name="InvoiceItems[0].ProductDescription" readonly /></td>
                <td><input type="text" class="form-control hsCode" name="InvoiceItems[0].HsCode" readonly /></td>
                <td><input type="text" class="form-control uom" name="InvoiceItems[0].UoM" readonly /></td>
                <td><input type="number" class="form-control rate" name="InvoiceItems[0].Rate" readonly /></td>
                <td><input type="number" class="form-control quantity" name="InvoiceItems[0].Quantity" value="1" min="1" /></td>
                <td><input type="number" class="form-control totalValue" name="InvoiceItems[0].TotalValue" readonly /></td>
                <td><input type="text" class="form-control taxRate" name="InvoiceItems[0].TaxRate" readonly /></td>
                <td><input type="number" class="form-control salesTax" name="InvoiceItems[0].SalesTaxApplicable" readonly /></td>
                <td><input type="number" class="form-control discount" name="InvoiceItems[0].Discount" value="0" /></td>
                <td></td>
            </tr>
        </tbody>
    </table>
    <button type="button" id="addItemBtn" class="btn btn-secondary">Add Item</button>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save Invoice</button>
    </div>
</form>

@section Scripts {
    <script src="~/js/invoice/add-invoice.js"></script>
}
