@using EInvoice.Common.DTO
@model ProductDTO

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <h2>Product Details</h2>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> (@Model.HsCode)</h4>
            <p><strong>Description:</strong> @Model.productDescription</p>
            <p><strong>HS Code:</strong> @Model.HsCode</p>
            <p><strong>Unit of Measurement:</strong> @Model.UoM</p>
            <p><strong>Price:</strong> @Model.FixedNotifiedValueOrRetailPrice.ToString("C")</p>
        </div>
        <div class="card-footer">
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Back to List</a>
            <a asp-controller="Product" asp-action="Upsert" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        </div>
    </div>
</div>
