@using EInvoice.Common.DTO
@model ResetPasswordDTO
@{
    Layout = null;
    ViewData["Title"] = "Reset Password";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" type="image/png" href="~/images/einvoice-app-logo/envoice-logo-title.png" />
    <link rel="stylesheet" href="~/flexy-theme/assets/css/styles.min.css" />
    <link href="~/flexy-theme/assets/css/custom-styles.min.css" rel="stylesheet" />
</head>
<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="position-relative overflow-hidden text-bg-light min-vh-100 d-flex align-items-center justify-content-center">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="row justify-content-center w-100">
                    <div class="col-md-8 col-lg-6 col-xxl-4">
                        <div class="card mb-0">
                            <div class="card-body">
                                <a href="./index.html" class="text-nowrap logo-img text-center d-block w-100">
                                    <img src="~/images/einvoice-app-logo/envoice-logo-rectangle.png" alt="envoice-logo" class="envoice-logo" />
                                </a>
                                <p class="e-invoice-logo-text">Integrated with FBR Digital Invoice</p>
                                <form asp-action="ResetPassword" method="post">
                                    @Html.AntiForgeryToken()
                                    <!-- THESE HIDDEN FIELDS ARE CRITICAL -->
                                    <input type="hidden" asp-for="Email" />
                                    <input type="hidden" asp-for="Token" />
                                    <div class="mb-3">
                                        <label asp-for="Email" class="form-label"></label>
                                        <input asp-for="Email" class="form-control" placeholder="Email" disabled/>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="Password" class="form-label"></label>
                                        <input asp-for="Password" class="form-control" aria-describedby="emailHelp" placeholder="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="ConfirmPassword" class="form-label"></label>
                                        <input asp-for="ConfirmPassword" class="form-control" aria-describedby="emailHelp" placeholder="Confirm Password" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2">Reset</button>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/flexy-theme/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/flexy-theme/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- solar icons -->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
</body>
</html>