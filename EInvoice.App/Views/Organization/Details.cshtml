@using EInvoice.Common.Entities
@model OrganizationDTO
@{
    ViewData["Title"] = "Organization Details";
}

<div class="container mt-5">
    <h2 class="mb-4">Organization Details</h2>

    <div class="card shadow p-4">
        <dl class="row">
            <dt class="col-sm-3">NTN / CNIC</dt>
            <dd class="col-sm-9">@Model.NTNCNIC</dd>

            <dt class="col-sm-3">Business Name</dt>
            <dd class="col-sm-9">@Model.BusinessName</dd>

            <dt class="col-sm-3">Province</dt>
            <dd class="col-sm-9">@Model.Province</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Model.Address</dd>
        </dl>

        <div class="mt-4">
            <a asp-controller="Organization" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                Edit
            </a>
            <a asp-controller="Organization" asp-action="Index" class="btn btn-secondary">
                Back to List
            </a>
        </div>
    </div>
</div>
